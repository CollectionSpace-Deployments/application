<record id="conditioncheck" is-extension="true" generate-services-schema="true" type="record,procedure">

    <!-- Information about your extension schema goes here -->
    <services-record-path id="variablemedia">conditionchecks_variablemedia:http://collectionspace.org/services/conditioncheck/domain/variablemedia,conditionchecks_variablemedia</services-record-path>

    <section id="technicalChanges">
        <repeat id="technicalChangesGroupList/technicalChangesGroup">
            <field id="technicalChange" section="variablemedia" ui-search="repeatable" autocomplete="vocab-technicalChange" ui-type="enum" />

            <field id="technicalChangeReason" section="variablemedia" ui-search="repeatable" autocomplete="vocab-technicalChangeReason" ui-type="enum" />

            <field id="technicalChangeDateGroup" section="variablemedia" ui-type="groupfield/structureddate"
                   ui-search="range" primarykey="technicalChangeDateGroup.dateDisplayDate"
                   ui-func="cspace.structuredDate" />

            <field id="technicalChangeNote" section="variablemedia" />

            <field id="previousSupport" section="variablemedia" ui-search="repeatable" autocomplete="vocab-conditionPreviousSupport" ui-type="enum" />

            <field id="newSupport" section="variablemedia" ui-search="repeatable" autocomplete="vocab-conditionNewSupport" ui-type="enum" />
        </repeat>
    </section>
</record>