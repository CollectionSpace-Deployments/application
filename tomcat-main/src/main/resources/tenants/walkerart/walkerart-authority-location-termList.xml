<record id="preferredSLA">
    <section id="termInformation">
        <repeat id="locTermGroupList/locTermGroup">
            <field id="termType" autocomplete="vocab-locationtermtype" ui-type="enum">
                <!-- adding vocab-locationtermtype vocabulary; hiding updated options list -->
                <!-- to use static term lists: uncomment options list; remove autocomplete/ui-type attributes; 
                        and add seperate_ui_container="true" to field tag -->
                <selector>locationAuthority-termType</selector>
                <!-- changing term list options -->
                <!--options>
                    <option id="">Please select a value</option>
                    <option id="Art Storage">Art Storage</option>
