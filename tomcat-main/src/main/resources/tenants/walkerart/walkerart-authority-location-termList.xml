                    <option id="Painting Storage">Painting Storage</option>
                    <option id="Print Storage">Print Storage</option>
                    <option id="Print Study">Print Study</option>
                    <option id="Receiving">Receiving</option>
                    <option id="Upper Print Storage">Upper Print Storage</option>
                </options-->
            </field>
            <field id="termLanguage" ui-search="repeatable" autocomplete="vocab-languages" ui-type="enum">
                <selector>locationAuthority-termLanguage</selector>
                <!-- changing URN for default language value -->
                <enum>
                    <default>urn:cspace:walkerart.org:vocabularies:name(languages):item:name(eng)'English'</default>
                </enum>
            </field>
        </repeat>
    </section>
</record>